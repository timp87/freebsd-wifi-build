# ${INSTALL_DEF_LINK} /sbin/bsdbox ${X_STAGING_FSROOT}/usr/libexec/getty
${INSTALL_DEF_BIN} ${X_DESTDIR}/usr/libexec/getty ${X_STAGING_FSROOT}/usr/libexec

# vmstat is useful
${INSTALL_DEF_LINK} /sbin/bsdbox ${X_STAGING_FSROOT}/usr/bin/systat
